<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.captainfanatic.bites">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
    	<provider android:name="com.captainfanatic.bites.RecipesProvider"
            android:authorities="com.captainfanatic.bites.RecipesProvider" />
	        <activity android:name=".Bites" android:label="@string/app_name">
	            <intent-filter>
	                <action android:name="android.intent.action.MAIN" />
	                <category android:name="android.intent.category.LAUNCHER" />
	            </intent-filter>
	            <intent-filter>
	                <action android:name="android.intent.action.VIEW" />
	                <action android:name="android.intent.action.EDIT" />
	                <action android:name="android.intent.action.PICK" />
	                <category android:name="android.intent.category.DEFAULT" />
	                <data android:mimeType="vnd.android.cursor.dir/vnd.captainfanatic.recipe" />
	            </intent-filter>
	            <intent-filter>
	                <action android:name="android.intent.action.GET_CONTENT" />
	                <category android:name="android.intent.category.DEFAULT" />
	                <data android:mimeType="vnd.android.cursor.item/vnd.captainfanatic.note" />
	            </intent-filter>
	        </activity>
    </application>
</manifest> 